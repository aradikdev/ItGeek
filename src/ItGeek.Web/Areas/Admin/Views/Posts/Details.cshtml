@model ItGeek.Web.Areas.Admin.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Просмотр";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-10">
        <h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>
    </div>
    <div class="col-2 text-right">
        <a asp-action="Index" class="btn btn-outline-danger">Вернуться назад</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Slug)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Slug)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PostImage)
            </dt>
            <dd class="col-sm-10">
                <img src="~/uploads/@Model.PostImage" style="width:400px;"/>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsDeleted)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CommentsClosed)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CommentsClosed)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PostBody)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.PostBody)

            </dd>
        </dl>
    </div>
</div>
